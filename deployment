version: '3.9'

services:
  postgres:
    image: postgres:15-alpine
    container_name: account-dashboard-db
    restart: unless-stopped
    environment:
      POSTGRES_DB: account_dashboard
      POSTGRES_USER: dashboard_user
      POSTGRES_PASSWORD: dashboard_pass
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U dashboard_user"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    build:
      context: ../backend
      dockerfile: Dockerfile
    container_name: account-dashboard-backend
    restart: unless-stopped
    environment:
      NODE_ENV: development
      POSTGRES_URL: postgres://dashboard_user:dashboard_pass@postgres:5432/account_dashboard
      SESSION_ENCRYPTION_KEY: "0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"
      CORE_BANKING_API_URL: "https://corebanking.example.com/api/accounts/balances"
      CORE_BANKING_API_TOKEN: "demo-access-token"
    ports:
      - "4000:4000"
    depends_on:
      postgres:
        condition: service_healthy

  frontend:
    build:
      context: ../frontend
      dockerfile: Dockerfile
    container_name: account-dashboard-frontend
    restart: unless-stopped
    environment:
      NEXT_PUBLIC_API_BASE_URL: "http://backend:4000/api"
      NODE_ENV: development
    ports:
      - "3000:3000"
    depends_on:
      - backend

volumes:
  postgres_data:
    driver: local